{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "/usr/local/bin/g++-14",  // Using GCC installed via Homebrew
            "args": [
                "-std=c++17",
                "${file}",  // Compile the current file
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"  // Output binary with the same name as the file
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Compile C++ file using Homebrew GCC"
        }
    ]
}
